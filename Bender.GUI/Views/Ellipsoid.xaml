<UserControl x:Class="Bender.GUI.Views.Ellipsoid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bender.GUI.Views"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Style="{StaticResource SettingsGrid}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <TextBlock Text="A"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="B"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="C"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Specular reflection constant"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Diffuse reflection constant"/>
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Ambient reflection constant"/>
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Shininess"/>

        <xctk:DecimalUpDown Name="ADecimalUpDown" 
                            Grid.Column="1" 
                            Grid.Row="0" 
                            Increment="0.1"
                            Value="{Binding A}"/>

        <xctk:DecimalUpDown Name="BDecimalUpDown"
                            Grid.Column="1"
                            Grid.Row="1"
                            Increment="0.1"
                            Value="{Binding B}"/>

        <xctk:DecimalUpDown Name="CDecimalUpDown"
                            Grid.Column="1"
                            Grid.Row="2"
                            Increment="0.1"
                            Value="{Binding C}"/>

        <xctk:DecimalUpDown Name="SpecularDecimalUpDown"
                            Grid.Column="1"
                            Grid.Row="3"
                            Increment="0.1"
                            Minimum="0"
                            Maximum="1"
                            ClipValueToMinMax="True"
                            Value="{Binding Specular}"/>

        <xctk:DecimalUpDown Name="DiffuseDecimalUpDown"
                            Grid.Column="1"
                            Grid.Row="4"
                            Increment="0.1"
                            Minimum="0"
                            Maximum="1"
                            ClipValueToMinMax="True"
                            Value="{Binding Diffuse}"/>

        <xctk:DecimalUpDown Name="AmbientDecimalUpDown"
                            Grid.Column="1"
                            Grid.Row="5"
                            Increment="0.1"
                            Minimum="0"
                            Maximum="1"
                            ClipValueToMinMax="True"
                            Value="{Binding Ambient}"/>

        <xctk:DecimalUpDown Name="ShininessDecimalUpDown"
                            Grid.Column="1"
                            Grid.Row="6"
                            Increment="0.1"
                            Minimum="0"
                            ClipValueToMinMax="True"
                            Value="{Binding Shininess}"/>

        </Grid>
</UserControl>
