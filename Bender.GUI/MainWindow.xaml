<Window x:Class="Bender.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bender.GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowState="Maximized">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.ColumnSpan="2">
            <MenuItem Header="File">
                <MenuItem Header="New"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Close"/>
            </MenuItem>
        </Menu>

        <Canvas Name="SceneCanvas" Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Background="Black" MouseRightButtonDown="SceneCanvas_OnMouseRightButtonDown"
                MouseMove="SceneCanvas_OnMouseMove"/>

        <DockPanel Grid.Column="1" Grid.Row="1" Background="LightGray">
            <ListBox Name="GeometryListBox" SelectionChanged="GeometryListBox_OnSelectionChanged">
            </ListBox>
        </DockPanel>

        <DockPanel Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Background="DarkGray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Text="Position"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="X"/>
                <TextBlock Grid.Column="3" Grid.Row="0" Text="Y"/>
                <TextBlock Grid.Column="5" Grid.Row="0" Text="Z"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Rotation"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Text="X"/>
                <TextBlock Grid.Column="3" Grid.Row="1" Text="Y"/>
                <TextBlock Grid.Column="5" Grid.Row="1" Text="Z"/>
                <TextBlock Grid.Column="0" Grid.Row="2" Text="Scale"/>
                <TextBlock Grid.Column="1" Grid.Row="2" Text="X"/>
                <TextBlock Grid.Column="3" Grid.Row="2" Text="Y"/>
                <TextBlock Grid.Column="5" Grid.Row="2" Text="Z"/>

                <TextBox Name="PositionXTextBox" Grid.Column="2" Grid.Row="0"/>
                <TextBox Name="PositionYTextBox" Grid.Column="4" Grid.Row="0"/>
                <TextBox Name="PositionZTextBox" Grid.Column="6" Grid.Row="0"/>

                <TextBox Name="RotationXTextBox" Grid.Column="2" Grid.Row="1"/>
                <TextBox Name="RotationYTextBox" Grid.Column="4" Grid.Row="1"/>
                <TextBox Name="RotationZTextBox" Grid.Column="6" Grid.Row="1"/>

                <TextBox Name="ScaleXTextBox" Grid.Column="2" Grid.Row="2"/>
                <TextBox Name="ScaleYTextBox" Grid.Column="4" Grid.Row="2"/>
                <TextBox Name="ScaleZTextBox" Grid.Column="6" Grid.Row="2"/>

            </Grid>
        </DockPanel>

        <ScrollViewer Name="ConsoleScrollViewer" Grid.Column="0" Grid.Row="3" Background="Gray">
            <ListBox Name="ConsoleListBox"></ListBox>
        </ScrollViewer>
    </Grid>
</Window>
